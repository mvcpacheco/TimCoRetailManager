<UserControl x:Class="TRMDesktopUI.Views.StatusInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TRMDesktopUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="Header" FontSize="22" FontWeight="Bold" Margin="20"/>
            <TextBlock x:Name="Message" FontSize="18" Margin="20"/>
            <Button x:Name="Close" Padding="10" Margin="20"></Button>
        </StackPanel>
    </Grid>
</UserControl>
